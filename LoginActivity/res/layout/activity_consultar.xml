<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtvResultadosConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/resultados_consulta"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtvConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvResultadosConsulta"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/consulta"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvResultadosConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvConsulta"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" >
    </ListView>

</RelativeLayout>